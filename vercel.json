{
  "version": 2,
  "builds": [
    {
      "src": "./server/dist/index.js",
      "use": "@vercel/node",
      "config": { "includeFiles": ["/server/dist/**"] }
    },
    {
      "src": "./client/dist",
      "use": "@vercel/vite"
    }
  ],

  "routes": [
    {
      "src": "/server/(.*)",
      "dest": "server/dist/index.js"
    },

    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
